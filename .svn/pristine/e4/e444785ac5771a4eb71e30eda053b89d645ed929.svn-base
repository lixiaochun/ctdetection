<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/head_lte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="#7BC351"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="LTE"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/signalinfo_lte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imgsignal_lte"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/signalinfo_lte" />
    </RelativeLayout>

    <include
        android:id="@+id/spec_4g"
        layout="@layout/signal_4g_cust"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/head_cdma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="#FEAF47"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="CDMA"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/signalinfo_cdma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imgsignal_cdma"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/signalinfo_cdma" />
    </RelativeLayout>

    <include
        android:id="@+id/spec_3g"
        layout="@layout/signal_cdma_cust"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/head_gsm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="#CC99CC"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="GSM"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/signalinfo_gsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imgsignal_gsm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/signalinfo_gsm" />
    </RelativeLayout>

    <include
        android:id="@+id/spec_gsm"
        layout="@layout/signal_gsm"
        android:visibility="gone" />
</LinearLayout>